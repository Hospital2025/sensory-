generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client" // Optional but recommended for clarity
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  service   String
  date      DateTime
  time      String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([phone])
  @@index([date])
}
