generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  service   String
  date      DateTime
  time      String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  seenByAdmin Boolean  @default(false) // ðŸ‘ˆ New field added

  @@index([phone])
  @@index([date])
}
