{
  "compilerOptions": {
    "target": "ES6",                  // Modern JavaScript
    "module": "commonjs",            // Required for Node.js
    "rootDir": "src",                // Source folder
    "outDir": "build",               // Compiled output folder
    "esModuleInterop": true,         // Allow default imports from CommonJS
    "strict": true,                  // Enable all strict type checks
    "skipLibCheck": true             // Skip type checks for .d.ts files
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
